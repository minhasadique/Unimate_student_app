<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:padding="8dp">

        <!-- Logo on the Left -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/unimatelogo"
            android:contentDescription="Logo"
            android:layout_gravity="center_vertical" />

        <!-- Title in the Center -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4282aa"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Profile" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Chat Icon on the Right -->
        <ImageView
            android:id="@+id/chatIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chatlogo"
            android:contentDescription="Chat Icon"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Scrollable Section -->
    <ScrollView
        android:id="@+id/scrollableSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Profile Photo -->
            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profilelogo" />

            <!-- Name -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="user@example.com"
                android:layout_marginTop="4dp" />

            <!-- Role -->
            <TextView
                android:id="@+id/tvRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Role: Student"
                android:layout_marginTop="4dp" />

            <!-- About -->
            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="About Me"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvAboutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="This is a brief summary about the user."
                android:layout_marginTop="4dp" />

            <!-- Interests -->
            <TextView
                android:id="@+id/tvInterests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Interests"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvInterestsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User interests go here."
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <!-- Education -->
            <TextView
                android:id="@+id/tvEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvEducationContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="User's educational background."
                android:layout_marginTop="4dp" />

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:backgroundTint="#40e0d0"
                android:layout_marginTop="16dp" />

            <!-- Upload Bus Pass Button -->
            <Button
                android:id="@+id/btnUploadBusPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Bus Pass"
                android:backgroundTint="#40e0d0"
                android:layout_marginTop="8dp" />

            <!-- Bus Pass ImageView -->
            <ImageView
                android:id="@+id/ivBusPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Bus Pass"
                android:layout_marginTop="8dp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="#40e0d0"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>
    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_alignParentBottom="true">

    <!-- Home Icon -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/homelogo"
            android:contentDescription="Home Icon" />
    </LinearLayout>

    <!-- Profile Icon -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/searchlogo"
            android:contentDescription="Profile Icon" />
    </LinearLayout>

    <!-- Notifications Icon -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/startuplogo"
            android:contentDescription="Notifications Icon" />
    </LinearLayout>

    <!-- Settings Icon -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/profilelogo"
            android:contentDescription="Settings Icon" />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
