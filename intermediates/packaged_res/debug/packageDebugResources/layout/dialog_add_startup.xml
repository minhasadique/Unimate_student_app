<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <EditText
        android:id="@+id/dialogStartupTitle"
        android:hint="Enter Startup Title"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textColorHint="#000"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/dialogStartupDescription"
        android:hint="Enter Description"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textColorHint="#000"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/dialogAuthorName"
        android:hint="Enter Author Name"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textColorHint="#000"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/dialogRolesNeeded"
        android:hint="Enter Roles Needed"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textColorHint="#000"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/dialogContactInfo"
        android:hint="Enter Contact (Phone/Email)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textColorHint="#000"
        android:inputType="textEmailAddress|phone" />

    <Button
        android:id="@+id/dialogPostButton"
        android:text="Post Startup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#40e0d0"
        android:textColor="@android:color/white"/>
</LinearLayout>
