<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Logo -->

        <!-- Login/Signup Heading -->

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="90dp"
            android:contentDescription="Logo"
            android:src="@drawable/unimatelogo" />

        <TextView
            android:id="@+id/pageTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Aboard for a fresh start!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Email Input -->

        <EditText
            android:id="@+id/etName"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Name"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#545454"
            android:textColorHint="#545454" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#545454"
            android:textColorHint="#545454" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#545454"
            android:textColorHint="#545454" />

        <RadioGroup
            android:id="@+id/rgRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student" />

            <RadioButton
                android:id="@+id/rbStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff" />
        </RadioGroup>

        <!-- Login Button -->
        <Button
            android:id="@+id/btnSignup"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#40e0d0"
            android:text="Sign Up"
            android:textColor="#FFFFFF" />

        <!-- Signup Text -->
<!--        <TextView-->
<!--            android:id="@+id/signupTextView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Sign Up as Faculty"-->
<!--            android:textColor="#2196F3"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:textSize="16sp"-->
<!--            android:clickable="true"-->
<!--            android:focusable="true" />-->
        <TextView
            android:id="@+id/tvResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>